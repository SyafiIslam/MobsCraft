<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobsCraft" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/splash_bg</item>

        <item name="android:statusBarColor">@color/splash_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTitle">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body">
        <item name="android:textStyle"></item>
    </style>

    <style name="Title.MobName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.Behavior">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Behavior">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Hp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.MobsCraft" parent="Base.Theme.MobsCraft" />
</resources>